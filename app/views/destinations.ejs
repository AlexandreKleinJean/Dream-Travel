<%- include('partials/header') %>
<script src="/js/test.js" defer></script>
<link rel="stylesheet" href="/css/destinationsStyle.css">

<h1 class="destination__title">Destinations</h1>

<div class="destination__articles">

<% for(let oneDestination of results) { %>

    <a class="destination__article" href="/destination/<%= oneDestination.dataValues.id %>">
        <img class="destination__article-back" src="/img/<%= oneDestination.dataValues.country %>.png" alt="<%= oneDestination.dataValues.country %>">
        <div class="destination__article-front"><%= oneDestination.dataValues.country %></div>
    </a>
    <% } %>

</div>

<%- include('partials/footer') %>